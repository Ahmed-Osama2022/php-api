{
    "name": "ahmedosama/php-api",
    "description": "Make an API for your application using PHP",
    "type": "project",
    "keywords": ["api", "php", "php-api", "rest-api", "react-php", "apis", "php8"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "src\\": "src/",
            "App\\": "App/"
        }
    },
    "authors": [
        {
            "name": "Ahmed Osama Khashaba",
            "email": "ahmadosama.2011@gmail.com",
             "homepage": "https://github.com/Ahmed-Osama2022"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
        ],
        "post-create-project-cmd": [
            "php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.6"
    }
}
